<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".walk.Activity.WriteActivity">

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산책 날짜"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/closeButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dateView"
        android:layout_width="350dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/dateText"
        app:layout_constraintStart_toStartOf="@+id/dateText"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_icon_button_background">

        <TextView
            android:id="@+id/dateViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000/00/00"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/dateView"
            app:layout_constraintStart_toStartOf="@id/dateView"
            app:layout_constraintEnd_toStartOf="@+id/dateSelectBtn"
            app:layout_constraintBottom_toBottomOf="@+id/dateView"/>

        <ImageButton
            android:id="@+id/dateSelectBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@+id/dateView"
            app:layout_constraintTop_toTopOf="@id/dateView"
            app:layout_constraintBottom_toBottomOf="@+id/dateView"
            android:layout_marginEnd="10dp"
            android:src="@drawable/walkwriting_date_select_icon"
            android:backgroundTint="@color/white"
            android:padding="0sp"
            android:scaleType="centerCrop"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/walkTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산책 시간"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/dateText"
        app:layout_constraintTop_toBottomOf="@id/dateView"
        android:layout_marginTop="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/walkStartTimeView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/walkTimeText"
        app:layout_constraintStart_toStartOf="@+id/walkTimeText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_icon_button_background">

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/walkStartTimeView"
            app:layout_constraintTop_toTopOf="@id/walkStartTimeView"
            app:layout_constraintBottom_toBottomOf="@id/walkStartTimeView"
            android:layout_marginStart="20dp"/>
        <ImageButton
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/walkStartTimeView"
            app:layout_constraintTop_toTopOf="@id/walkStartTimeView"
            app:layout_constraintBottom_toBottomOf="@id/walkStartTimeView"
            android:src="@drawable/walkwriting_date_select_icon"
            android:backgroundTint="@color/white"
            android:padding="0sp"
            android:scaleType="centerCrop"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/between"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/walkStartTimeView"
        app:layout_constraintTop_toTopOf="@id/walkStartTimeView"
        app:layout_constraintBottom_toBottomOf="@+id/walkStartTimeView"
        app:layout_constraintEnd_toStartOf="@id/walkEndTimeView"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/walkEndTimeView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/walkStartTimeView"
        app:layout_constraintEnd_toEndOf="@id/dateView"
        android:layout_marginEnd="20dp"
        android:background="@drawable/home_icon_button_background">
        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/walkEndTimeView"
            app:layout_constraintTop_toTopOf="@+id/walkEndTimeView"
            app:layout_constraintBottom_toBottomOf="@+id/walkEndTimeView"
            android:layout_marginStart="20dp"/>
        <ImageButton
            android:id="@+id/endBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/walkEndTimeView"
            app:layout_constraintTop_toTopOf="@id/walkEndTimeView"
            app:layout_constraintBottom_toBottomOf="@id/walkEndTimeView"
            android:src="@drawable/walkwriting_date_select_icon"
            android:backgroundTint="@color/white"
            android:padding="0sp"
            android:scaleType="centerCrop"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/walkStartTimeView"
        app:layout_constraintStart_toStartOf="@id/walkTimeText"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="내용을 입력하세요."
        app:layout_constraintTop_toBottomOf="@id/contentText"
        app:layout_constraintStart_toStartOf="@id/contentText"
        android:lines="3"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>