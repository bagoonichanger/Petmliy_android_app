<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/postUserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/post_user_image_null"
        android:background="@drawable/mypage_image_background"/>
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/userImg"
        app:layout_constraintTop_toTopOf="@id/userImg"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="petmily"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/postImg"
        android:layout_width="370dp"
        android:layout_height="370dp"
        app:layout_constraintTop_toBottomOf="@+id/postUserLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:id="@+id/favoriteView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/postImg"
        app:layout_constraintStart_toStartOf="@id/postImg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/favoriteBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/post_favorite_border_ic"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/favoriteColorBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/post_favorite_color_24"
            android:backgroundTint="@color/white"
            android:visibility="invisible"
            android:padding="0dp"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <ImageButton
        android:id="@+id/commentBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/post_comment_icon_24"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="@id/favoriteView"
        app:layout_constraintStart_toEndOf="@id/favoriteView"
        android:layout_marginStart="10dp"
        app:layout_goneMarginStart="10dp"
        android:padding="0dp"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/postContent"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/favoriteView"
        app:layout_constraintStart_toStartOf="@id/postImg"
        android:textSize="20dp"
        android:textColor="@color/black"
        tools:text = "안녕하세요~~~"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>