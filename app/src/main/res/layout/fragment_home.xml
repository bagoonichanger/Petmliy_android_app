<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/middle"
            android:background="@drawable/home_icon_button_background"
            android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/petImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/map_search_button_background" />

                <TextView
                    android:id="@+id/petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/petImage"
                    android:text="pet name"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/petBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/petName"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/petImage"
                    android:text="2022.03.08"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/mypageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/petImage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/home_icon_button_background"
                    android:src="@drawable/ic_baseline_person_outline_24" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/setting"
            app:layout_constraintBottom_toTopOf="@+id/albumButton">

                <ImageButton
                    android:id="@+id/weatherButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/home_icon_button_color_background"
                    android:padding="50sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_filter_drama_24"/>

                <ImageButton
                    android:id="@+id/bookmarkButton"
                    android:src="@drawable/ic_baseline_bookmark_border_24"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:padding="50sp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/home_icon_button_color_background"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/albumButton"
            android:src="@drawable/ic_baseline_crop_original_24"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="150sp"
            android:scaleType="centerCrop"
            android:background="@drawable/home_icon_button_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middle"
            app:layout_constraintBottom_toBottomOf="parent"/>

</LinearLayout>